<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.unibuddy.finalproject.unibuddy.AlcoholPrefFrag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="160dp"
        android:text="Do you drink?"
        android:id="@+id/drinkQues"/>

    <Spinner
        android:id="@+id/spinnerAlcoholPref"
        android:layout_width="211dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/drinkQues"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/spinnerAlcoholPref"
        android:text="Are you ok with people drinking?"
        android:id="@+id/drinkOkQues"/>

    <Spinner
        android:id="@+id/spinnerOkWithAlcohol"
        android:layout_width="211dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/drinkOkQues"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="160dp"
        android:text="@string/Next"
        android:id="@+id/nxAl"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/drinkQues"
        android:layout_marginBottom="120dp" />

</RelativeLayout>
